<h2>Details about Client</h2>
<tbody>
  <tl>
    Name
    <li>
      <%= @owner.name %>
    </li>
    Phone Number
    <li>
      <%= @owner.phone_number %>
    </li>
    Fax Number
    <li>
      <%= @owner.fax_number %>
    </li>
    Address
    <li>
      <%= @owner.address %>
    </li>
    Email Address
    <li>
      <%= @owner.email %>
    </li>
    Comments
    <li>
      <%= @owner.comments %>
    </li>
    Own Horses
    <% @horses.each do |horse| %>
      <li>
        <%= link_to "#{horse.name}", horse_path(horse) %>
      </li>
    <% end %>
    Balance
        <li>
            <%= @sum %>
        </li>
    <%= button_to "Send Mail", owner_mail_path(@owner), :method => :get %>
  </tl>
</tbody>

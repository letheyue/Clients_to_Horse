<h1>Select Procedure</h1>
<table>
  <thead>
    <tr>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @procedures.each do |procedure| %>
      <tr>
        <td>
          <%= procedure.name %>
        </td>        
        <td>
          <%= link_to "Add", activity_menu_path(:procedure_id => procedure.id, :horse_id => @horse.id), class: "btn btn-default" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<div>
  <%= link_to "Back to horse information", horse_path(:id => @horse.id) %>
</div>
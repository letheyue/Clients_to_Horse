<% # in app/views/movies/show.html.haml %>
<h2>Details about Horse</h2>
<tbody>
  <tl>
    Name
    <li>
      <%= @horse.name %>
    </li>
    Age
    <li>
      <%= @horse.age %>
    </li>
    Sex
    <li>
      <%= @horse.sex %>
    </li>
    Breed
    <li>
      <%= @horse.breed %>
    </li>
    Owner
      <li>
        <%= link_to "#{@owner.name}", owner_path(@owner) %>
      </li>   
    Activities
    <tbody>
      <%= form_tag('/update_activities') do %>
        <% @horse_activities.each do |activity| %>
          <li>
            <%= @activities.find(activity.activity_id).name %>
            <%= activity.date.to_date %>
            <%= activity.price %>
            <%= activity.comment %>
            <%if activity.status == 1%>
                <%= check_box("done", "id", {:multiple => true}, activity.id, nil) %>
            <% elsif  activity.status == 2%>
                <%= check_box("undone", "id", {:multiple => true, :checked => true}, activity.id, nil ) %>
            <% end %>
            <%= check_box("delete", "id", {:multiple => true}, activity.id, nil) %>
          </li>
        <% end %>
        <%= hidden_field_tag "horse_id", @horse.id %>
        <%= submit_tag("Update") %>
      <% end %>
      <%= link_to "Add Procedure", procedure_menu_path(:horse_id => @horse.id) %>
  </tl>
</tbody>

<% # edit.html.haml using partial %>
<h1>Edit Activity</h1>
<%= form_tag activity_path(@activity), :method => :put do %>
    <%= label :activity, :name, 'Name' %>
    <%= text_field :activity, 'name' %>
    <%= label :activity, :price, 'Price' %>
    <%= text_field :activity, 'price' %>
    <%= label :activity, :comment, 'Comment' %>
    <%= text_field :activity, 'comment' %>

    <%= submit_tag 'Update Activity Info' %>
<% end %>
